<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/ScrollView01" >
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aayushi.designapp.invoiceActivity"
    android:background="@drawable/invoice">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Invoice"
        android:id="@+id/textView25"
        android:layout_marginLeft="120dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BILL NUMBER"
        android:id="@+id/t1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
         />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:id="@+id/t2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BILLING DATE"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:id="@+id/t3"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="130dp"
        android:id="@+id/t4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRPDUCT ID"
        android:id="@+id/t5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/t6"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        />
    <Button
        android:id="@+id/btnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="120dp"
        />

    <TextView
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"/>

    <TextView
        android:id="@+id/t8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COST/PIECE"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"/>
    <EditText
        android:id="@+id/t9"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="120dp"/>
    <TextView
        android:id="@+id/t10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO OF ITEMS"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="330dp"/>
    <EditText
        android:id="@+id/t11"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="310dp"/>

    <TextView
        android:id="@+id/t12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCOUNT"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/t13"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/t14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAT"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="390dp"/>
    <TextView
        android:id="@+id/t15"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="120dp"/>

    <Button
        android:id="@+id/btna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMOUNT"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="410dp"/>

    <TextView
        android:id="@+id/t16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="430dp"/>
    <TextView
        android:id="@+id/t17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYER DETAILS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="100dp"
                />

    <TextView
        android:id="@+id/t18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"/>

    <EditText
        android:id="@+id/t19"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="480dp"/>
    <TextView
        android:id="@+id/t20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOBILE NUMBER"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="530dp"/>

    <EditText
        android:id="@+id/t21"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="505dp"/>
    <Button
        android:id="@+id/btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="600dp"/>

    <Button
        android:id="@+id/btnab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD BILL"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="600dp"/>





</RelativeLayout>
</ScrollView>